@using System.Web.Optimization
@model List<GreatOutdoors.Mvc.Models.OrderViewModel>
@Scripts.Render("~/scripts/jqueryvalidation")
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Order History</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script>

    </script>
</head>
<body>
    <div class="container-fluid">
        <div class="border-top text-right pt-2">
            <a href="@Url.Action("ReturnHistory", "Returns")" class="btn btn-danger">View Return History</a>
        </div>

        <h2 class="col-md-4">Order History</h2>
        <br />
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Order Date</th>
                    <th>Total Quantity</th>
                    <th>Total Price</th>
                    <th>Channel of Sale</th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderDateTime</td>
                        <td>@item.TotalQuantity</td>
                        <td>@item.TotalAmount</td>
                        <td>@item.ChannelOfSale</td>
                        <td>
                            <a href="@Url.Action("OrderDetails", "Returns",new { id = item.OrderID})">View Details</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>