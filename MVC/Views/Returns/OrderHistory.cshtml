@model List<GreatOutdoors.MVC.Models.OrderViewModel>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Order History</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <h2 class="col-md-4 mx-auto">View Order Details</h2>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Order Date</th>
                    <th>Total Quantity</th>
                    <th>Total Price</th>
                    <th>Channel of Sale</th>
                    <th>Action</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.OrderDateTime</td>
                    <td>@item.TotalQuantity</td>
                    <td>@item.TotalAmount</td>
                    <td>@item.ChannelOfSale</td>
                    <td>
                      <a href="@Url.Action("OrderDetails", "Returns",new { id = item.OrderID })">View Details</a>

                    </td>                    
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
